<?xml version="1.0" encoding="UTF-8"?>
<hibernate-mapping>
   <class name = "com.model.Product" table = "product">

      <id name = "id" type = "int" column = "id">
         <generator class="increment"/>
      </id>
      
      <property name = "name" column = "name" type = "string"/>
       <property name = "description" column = "description" type = "string"/>
      <property name = "catagoryid" column = "catagoryid" type = "int"/>
         <property name = "unit" column = "unit" type = "string"/>
         <property name = "brand" column = "brand" type = "string"/>
         <property name = "availability" column = "availability" type = "int"/>
   </class>
</hibernate-mapping>
